<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:background="@color/background"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/resultScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="@string/initCalculator"
        android:textSize="70sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="C"
        android:id="@+id/btn_clear"
        android:height="70dp"
        android:backgroundTint="@color/resetBtnColor"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:tag="7"
            android:id="@+id/btn_7"
            android:layout_margin="5dp"
            android:width="50dp"
            android:height="50dp"
            android:backgroundTint="@color/btnColor"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:tag="8"
            android:id="@+id/btn_8"
            android:layout_margin="5dp"
            android:width="50dp"
            android:height="50dp"
            android:backgroundTint="@color/btnColor"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:tag="9"
            android:id="@+id/btn_9"
            android:layout_margin="5dp"
            android:width="50dp"
            android:height="50dp"
            android:backgroundTint="@color/btnColor"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:id="@+id/btn_div"
            android:layout_margin="5dp"
            android:width="50dp"
            android:height="50dp"
            android:backgroundTint="@color/btnColor"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:tag="4"
            android:id="@+id/btn_4"
            android:layout_margin="5dp"
            android:width="50dp"
            android:height="50dp"
            android:backgroundTint="@color/btnColor"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:tag="5"
            android:id="@+id/btn_5"
            android:layout_margin="5dp"
            android:width="50dp"
            android:height="50dp"
            android:backgroundTint="@color/btnColor"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:tag="6"
            android:id="@+id/btn_6"
            android:layout_margin="5dp"
            android:width="50dp"
            android:height="50dp"
            android:backgroundTint="@color/btnColor"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:id="@+id/btn_mul"
            android:layout_margin="5dp"
            android:width="50dp"
            android:height="50dp"
            android:backgroundTint="@color/btnColor"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:tag="1"
            android:id="@+id/btn_1"
            android:layout_margin="5dp"
            android:width="50dp"
            android:height="50dp"
            android:backgroundTint="@color/btnColor"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:tag="2"
            android:id="@+id/btn_2"
            android:layout_margin="5dp"
            android:width="50dp"
            android:height="50dp"
            android:backgroundTint="@color/btnColor"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:tag="3"
            android:id="@+id/btn_3"
            android:layout_margin="5dp"
            android:width="50dp"
            android:height="50dp"
            android:backgroundTint="@color/btnColor"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/btn_sub"
            android:layout_margin="5dp"
            android:width="50dp"
            android:height="50dp"
            android:backgroundTint="@color/btnColor"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:tag="."
            android:id="@+id/btn_point"
            android:layout_margin="5dp"
            android:width="50dp"
            android:height="50dp"
            android:backgroundTint="@color/btnColor"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:tag="0"
            android:id="@+id/btn_0"
            android:layout_margin="5dp"
            android:width="50dp"
            android:height="50dp"
            android:backgroundTint="@color/btnColor"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+/-"
            android:id="@+id/btn_changeSign"
            android:layout_margin="5dp"
            android:width="50dp"
            android:height="50dp"
            android:backgroundTint="@color/btnColor"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/btn_add"
            android:layout_margin="5dp"
            android:width="50dp"
            android:height="50dp"
            android:backgroundTint="@color/btnColor"
            />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:text="="

        android:id="@+id/btn_equal"
        android:height="70dp"
        android:backgroundTint="@color/equalBtnColor"
        />

</LinearLayout>